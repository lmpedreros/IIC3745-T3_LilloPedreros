<div class="columns is-centered">
  <div class="column is-half" style= "margin-top: 6rem;">
    <h2 class="title is-2 has-text-centered">Iniciar Sesión</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <label class="label">Correo electrónico</label>
        <div class="control has-icons-left">
          <%= f.email_field :email, class: 'input', autofocus: true, autocomplete: "email" %>
          <span class="icon is-small is-left">
            <i class="fas fa-envelope"></i>
          </span>
        </div>
      </div>

      <div class="field">
        <label class="label">Contraseña</label>
        <div class="control has-icons-left">
          <%= f.password_field :password, class: 'input', autocomplete: "current-password" %>
          <span class="icon is-small is-left">
            <i class="fas fa-lock"></i>
          </span>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "¿Recordar mis datos?" %>
        </div>
      <% end %>

      <div class="field">
        <%= f.submit "Iniciar Sesión", class: "button is-primary is-fullwidth" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
